@model ProcessEngine.IdentityServer.Web.Features.Users.CompleteRegistrationViewModel
@{
    ViewData["Title"] = "Registrierung vervollständigen";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Registrieren</h3>
                </div>
                <div class="panel-body">
                    @Html.Partial("_ValidationSummary")
                    <form asp-controller="Users" asp-action="CompleteRegistration" method="post">
                        <fieldset>
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="UserId" />
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
